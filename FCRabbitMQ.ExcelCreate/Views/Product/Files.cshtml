@{
    ViewData["Title"] = "Files";
}
@model List<UserFile>

@section Scripts {
    <script>
        $(document).ready(function () {
            var hasStartCreatingExcel = '@TempData["StartCreatingExcel"]';
            if (hasStartCreatingExcel) {
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Excel Oluşturma İşlemi başlamıştır.Bittiğinde Bildiri Alacaksınız.',
                    showConfirmButton: false,
                    timer: 2500
                });
            }
        })

    </script>
}
<h1>@ViewBag.departmentName  Files</h1>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>#</th>
            <th>File Name</th>
            <th>Created Date</th>
            <th>File Status</th>
            <th>Download</th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.FileName</td>
            <td>@item.GetCreatedDate</td>
            <td>@item.FileStatus</td>
            <td>
                <a href="~/files/@item.FilePath" class="btn btn-primary @(item.FileStatus==FileStatus.Creating ? "disabled":"")">Download</a>
            </td>
        </tr>
    }
</table>